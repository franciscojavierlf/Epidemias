function draw(city, axes)
%DRAW Summary of this function goes here
%   Detailed explanation goes here

cla(axes);

hold(axes, 'on');


% Dibuja las casas
xx = zeros(4,city.Homes.length());
yy = zeros(4, city.Homes.length());

for i = 1 : city.Homes.length()
    b = city.Homes.getAt(i);

    xx(:, i) = [b.X, b.X + b.Width, b.X + b.Width, b.X];
    yy(:, i) = [b.Y, b.Y, b.Y + b.Height, b.Y + b.Height];
end

patch(axes, 'XData', xx, 'YData',  yy, 'FaceColor', 'none', 'EdgeColor', [0 0 1]);

% Dibuja los edificios
xx = zeros(4,city.NoHomes.length());
yy = zeros(4, city.NoHomes.length());

for i = 1 : city.NoHomes.length()
    b = city.NoHomes.getAt(i);

    xx(:, i) = [b.X, b.X + b.Width, b.X + b.Width, b.X];
    yy(:, i) = [b.Y, b.Y, b.Y + b.Height, b.Y + b.Height];
end

patch(axes, 'XData', xx, 'YData',  yy, 'FaceColor', 'none', 'EdgeColor', [0.4 0.4 0.4]);

% Dibuja a las personas
sx = zeros(1, city.Population.length());
sy = zeros(1, city.Population.length());
ix = zeros(1, city.Population.length());
iy = zeros(1, city.Population.length());
rx = zeros(1, city.Population.length());
ry = zeros(1, city.Population.length());

for i = 1 : city.Population.length()
    p = city.Population.getAt(i);
   
    % Casos para diferentes estados
    if p.isSusceptible()
        sx(1, i) = p.X;
        sy(1, i) = p.Y;
    elseif p.isInfectious()
        ix(1, i) = p.X;
        iy(1, i) = p.Y;
    elseif p.isRecovered()
        rx(1, i) = p.X;
        ry(1, i) = p.Y;
    end
   %plot(axes, p.X, p.Y, '*', 'color', color);
end

scatter(axes, sx, sy, 3, [0 0 1]);
scatter(axes, ix, iy, 'Color', [1 0 0]);
scatter(axes, rx, ry, 'Color', [0.4 0.4 0.4]);

end

